//Exercicio
//Fogo vence Terra (fogo queima a terra).
//Terra vence Água (terra absorve a água).
//Água vence Fogo (água apaga o fogo).

idadeF = prompt ("Quantos anos você tem? ");
  if(idadeF < 18){
    alert("Você não pode jogar o jogo do fogo")
  }

if(idadeF >= 18){
  alert ("Vamos jogar");
  //Jogo de Fogo, Água e Terra
  escolhaJogadorF = prompt ("Digite 1-Fogo 2-Agua 3-Terra")
  escolhaComputadorF = Math.floor(Math.random() * 3) + 1;
  //JogadorF Fogo, ComputadorF Fogo ---> Empate!!!
  //JogadorF Agua, ComputadorF Agua ---> Empate!!!
  //JogadorF Terra, ComputadorF Terra --->Empate!!!
  
  if(escolhaJogadorF == escolhaComputadorF){
    alert("Empate!!!")
  }
  //1-Fogo
   //JogadorF Fogo, ComputadorF Agua --> ComputadorF venceu
  if(escolhaJogadorF == 1){
    if(escolhaComputadorF == 2){
      alert("Computador venceu, escolheu agua ")
    }
    //JogadorF Fogo, ComputadorF Terra--> Jogador venceu  
    if(escolhaComputadorF == 3){
        alert("Jogador venceu ,computador terra ")
      }
    }
  }
//1-Fogo vence 3-Terra (fogo queima a terra).
//3-Terra vence 2-Água (terra absorve a água).
//2-Água vence 1-Fogo (água apaga o fogo).
      
    //2-Agua
    //JogadorF Agua, ComputadorF Fogo -->JogadorF venceu.
    if(escolhaJogadorF == 2){
      if(escolhaComputadorF == 1){
        alert("Jogador venceu , computador fogo")
      }
    //JogadorF Agua, ComputadorF Terra -->JogadorF venceu.
      if(escolhaComputadorF == 3){
        alert("Computador venceu , computador terra")
      }
    }  
  
  //3- Terra
  //JogadorF Terra , ComputadorF Fogo --> Computador venceu 
  if(escolhaJogadorF == 3){
    if(escolhaComputadorF == 1){
      alert("Computador venceu ,escolheu fogo ")
    }
    //Jogador Terra, ComputadorF Agua --> Jogador venceu
    if(escolhaComputadorF == 2){
      alert("Jogador venceu , escolheu terra ")
    }
  }
 
alert("A escolha do computador foi: "+ escolhaComputadorF)

